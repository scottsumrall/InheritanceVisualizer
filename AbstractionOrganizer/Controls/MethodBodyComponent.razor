<div id="@methodID" class="row w-100">
    <div class="col box d-flex flex-row justify-content-center">
        <div class="col-3 d-flex component-item">
                   <div class="dropdown">
                            <div class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @accessModifier
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                    </div>
        </div>

        @if (methodModifier is not MethodModifier.Default)
        {
            <div class="col-3 d-flex component-item">
                <p>@methodModifier</p>
            </div>
        }

        <div class="col-3 d-flex component-item">
            <p>@returnType</p>
        </div>


        <div class="col-4 d-flex component-item">
               <p>@name</p>
        </div>
            <div class="col-2 d-flex component-item">
                        <button @onclick="Toggle" class="btn">
                            <div class="triangle-down"></div>
                        </button>
            </div>
    </div>
</div>

    @if(!Collapsed)
    {
            <MethodCodeBlockComponent></MethodCodeBlockComponent>
    }


@code {
    [Parameter]
    public int methodID { get; set; }

    [Parameter]
    public required AccessModifier accessModifier { get; set; }

    [Parameter]
    public required MethodModifier methodModifier { get;set; }

    [Parameter]
    public required string returnType { get; set; }

    [Parameter]
    public required string name { get; set; }

    public bool Collapsed { get; set; } = true;

    void Toggle()
    {
        Collapsed = !Collapsed;
    }
}


